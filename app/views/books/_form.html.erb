<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :subtitle, style: "display: block" %>
    <%= form.text_field :subtitle %>
  </div>

  <div>
    <%= form.label :release, style: "display: block" %>
    <%= form.date_field :release %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.select :author_id, options_for_select(@authors.map { |author| [author.name, author.id] }) %>
  <div>

  <div>
    <%= form.label :genre, style: "display: block" %>
    <%= form.select :genre_id, options_for_select(@genres.map { |genre| [genre.name, genre.id] }) %>
  <div>

  <div>
  <%= form.label :publisher, style: "display: block" %>
  <%= form.select :publisher_id, options_for_select(@publishers.map { |publisher| [publisher.name, publisher.id] }) %>
  <div>

  <div>
  <%= form.label :language, style: "display: block" %>
  <%= form.select :language_id, options_for_select(@languages.map { |language| [language.name, language.id] }) %>
  <div>

  <div>
    <%= form.label :cover %>
    <%= form.file_field :cover %>
  </div>

    <%= form.submit %>
  </div>
<% end %>
